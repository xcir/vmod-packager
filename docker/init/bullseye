FROM debian:bullseye-slim

RUN export DEBIAN_FRONTEND=noninteractive && \
    apt-get update && \
    apt-get install -yq lsb-release unzip curl apt-utils wget build-essential git devscripts debhelper automake autotools-dev libtool pkg-config && \
    apt-get install -yq libpcre2-dev libpcre3-dev libjemalloc-dev python3-docutils python3-sphinx libncurses-dev libedit-dev
