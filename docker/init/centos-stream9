FROM quay.io/centos/centos:stream9

#waiting for jemalloc-devel!
#https://bugzilla.redhat.com/show_bug.cgi?id=2034311

RUN dnf -y update && \
    dnf -y install 'dnf-command(config-manager)' && \
    dnf config-manager --set-enabled crb && \
    dnf -y install \
    https://dl.fedoraproject.org/pub/epel/epel-release-latest-9.noarch.rpm \
    https://dl.fedoraproject.org/pub/epel/epel-next-release-latest-9.noarch.rpm

RUN dnf -y group install "Development Tools" && \
    dnf -y install unzip wget git

RUN dnf -y install python3-sphinx libedit-devel jemalloc-devel python3-docutils ncurses-devel pcre-devel pcre2-devel
